{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
   "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strict": true,
   "baseUrl": "." ,
   "paths": {
      "@/":["src/*"],
   },
},
"exclude": ["node_modules", "babel.config.js",
    "metro.config.js",
    "jest.config.js"]
}
